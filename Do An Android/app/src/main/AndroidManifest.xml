<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.appfood">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <!-- <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppFood"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Account.QuenMatKhauActivity"
            android:exported="false" />
        <activity
            android:name=".activity.Account.DangKyActivity"
            android:exported="false" />
        <activity
            android:name=".activity.Account.DangNhapActivity"
            android:exported="false" />
        <activity
            android:name=".activity.TimKiemActivity"
            android:exported="false" />
        <activity
            android:name=".activity.TaiKhoanActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SuccessCheckoutActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <!--
           Khóa API cho các API dựa trên Google Maps được định nghĩa như một tài nguyên chuỗi.
           (Xem tệp "res/values/google_maps_api.xml").
           Lưu ý rằng khóa API này liên kết với khóa mã hóa được sử dụng để ký APK.
           Bạn cần một khóa API khác nhau cho mỗi khóa mã hóa, bao gồm cả khóa phát hành được sử dụng để
           ký APK cho việc xuất bản.
           Bạn có thể định nghĩa các khóa cho các mục tiêu gỡ lỗi (debug) và phát hành (release) trong src/debug/ và src/release/.
        -->
        <!-- <meta-data -->
        <!-- android:name="com.google.android.geo.API_KEY" -->
        <!-- android:value="@string/google_maps_key" /> -->
        <activity
            android:name=".activity.ThongTinKhachHangActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.GioHangActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ChiTietMonActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ChiTietDanhMucActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DanhMucActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>